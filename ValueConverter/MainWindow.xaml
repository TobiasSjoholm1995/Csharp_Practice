<Window x:Class="ValueConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ValueConverter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="boolVisibilityConverter"/>
    </Window.Resources>


    <DockPanel>
        <Rectangle Width="100" Height="20" Fill="Green" Visibility="{Binding ShowRectangle, Converter={StaticResource boolVisibilityConverter}}"/>
        <Button Width="100" Height="40" Content="Button" Click="Button_Click"/>
    </DockPanel>
    
</Window>

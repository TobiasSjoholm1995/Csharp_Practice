<Window x:Class="Practice.Responsiveness.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Responsiveness"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label FontSize="12" HorizontalAlignment="Center" Content="Try to drag or resize the windows after pressing the buttons"></Label>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <Button Content="Normal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Width="120" Height="40" Click="NormalButton_Click"/>
                <Button Content="Thread" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Width="120" Height="40" Click="ThreadButton_Click"/>
                <Button Content="Async" HorizontalAlignment="Center"  VerticalAlignment="Center" Margin="10" Width="120" Height="40" Click="AsyncButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
